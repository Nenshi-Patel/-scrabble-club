<%= link_to 'Back', players_path, class: "btn btn-warning change-employee-role",style: "width:4%;margin-left:95%;margin-top:1%"%>
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= @player.new_record? ? 'New ' : 'Update '%> Player</h4>
        <form class="form">
          <div class="form-group mb-3 row">
            <%= f.label "First Name", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3 row">
            <%= f.label "Last Name", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3 row">
            <%= f.label "Date Of Joining", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.date_field :date_of_joining, class: "form-control" %>
            </div>
          </div>
        

          <div class="form-group mb-3 row">
            <%= f.label "Contact Details", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :contact_details, class: "form-control" %>
            </div>
          </div>
              
          <div class="form-group row">
            <%= f.submit @player.new_record? ? 'Create' : 'Update', class: 'btn btn-success d-lg-block m-l-15', id: 'vendor_submit'%>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
