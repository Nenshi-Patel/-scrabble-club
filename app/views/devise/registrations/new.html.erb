<html>
<body style="background:#60467e;color:white">
<%= render '/players/navbar'%>
<center><h2>Sign up</h2></center>
<div style="margin-left:38%;margin-top:3%">
<%=form_for @player, url:player_registration_path,method:'post' do |f| %>  
  <div class="col-sm-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class:"form-control" %>
    <div style="color:red"><%=@player.errors[:email].to_sentence%></div><br />
  </div>

  <div class="col-sm-5">
    <%= f.label :password %><br />
    <%= f.password_field :password, autofocus: true,class:"form-control" %>
    <div style="color:red"><%=@player.errors[:password].to_sentence%></div><br />
  </div>
  
  <div class="col-sm-5">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true,class:"form-control" %>
    <div style="color:red"><%=@player.errors[:first_name].to_sentence%></div><br />
  </div>

  <div class="col-sm-5">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true,class:"form-control" %><br/>
  </div>

  <div class="col-sm-5">
    <%= f.label :date_of_joining %><br />
    <%= f.date_field :date_of_joining, autofocus: true,class:"form-control" %>
    <div style="color:red"><%=@player.errors[:date_of_joining].to_sentence%></div><br />
  </div>

  <div class="col-sm-5">
    <%= f.label :contact_details %><br />
    <%= f.text_field :contact_details, autofocus: true,class:"form-control" %>
    <div style="color:red"><%=@player.errors[:contact_details].to_sentence%></div><br />
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,disable_with: 'Submiting...',class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
</html>
